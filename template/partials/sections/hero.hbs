<!-- HERO SECTION                                 -->
<!-- Full-screen landing area with band photo     -->
<!-- ============================================= -->
<section id="hero" class="relative h-screen flex items-center justify-center overflow-hidden">
    
    <!-- Background Image with WebP fallback -->
    <picture class="absolute inset-0">
        <source srcset="images/large/{{hero.image}}.webp" type="image/webp">
        <img src="images/large/{{hero.image}}.jpg" 
             alt="{{site.title}} full band" 
             class="w-full h-full object-cover object-center"
             itemprop="image">
    </picture>
    
    <!-- Gradient Overlay for text contrast -->
    <div class="absolute inset-0 bg-gradient-to-br from-purple-900/60 to-amber-900/60"></div>
    <div class="hero-overlay absolute inset-0"></div>
    
    <!-- Hero Content -->
    <div class="relative z-10 text-center px-6">
        <h1 class="bebas text-6xl md:text-8xl lg:text-9xl mb-4" itemprop="name">{{site.title}}</h1>
        <p class="text-xl md:text-3xl mb-2 gradient-text font-bold" itemprop="slogan">{{site.tagline}}</p>
        <p class="text-lg md:text-xl mb-8 max-w-2xl mx-auto" itemprop="description">
            {{site.heroDescription}}
        </p>
        
        <!-- Call-to-Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            {{#each hero.cta}}
            <a href="{{this.href}}" class="px-8 py-3 {{this.classes}} rounded-full font-semibold transition-all hover:scale-105">
                {{this.text}}
            </a>
            {{/each}}
        </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 animate-bounce" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
        </svg>
    </div>
</section>