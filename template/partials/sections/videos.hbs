<!-- ============================================= -->
<!-- VIDEOS SECTION                                -->
<!-- YouTube performance videos                    -->
<!-- ============================================= -->
<section id="videos" aria-labelledby="videos-heading" class="py-20 px-6 bg-gradient-to-b from-purple-950/30 to-black">
    <div class="max-w-7xl mx-auto">
        <h2 class="bebas text-5xl md:text-6xl text-center mb-12 gradient-text" id="videos-heading">Live Performances</h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {{#each videos}}
            <div class="bg-gray-900/50 rounded-lg overflow-hidden border border-purple-500/30 hover:border-purple-400 transition-all">
                <a href="{{this.url}}" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="block group"
                   aria-label="Watch {{this.title}} on YouTube">
                    <div class="aspect-video relative overflow-hidden">
                        <img src="{{this.thumbnail}}" 
                             alt="{{this.title}} - Live performance thumbnail"
                             class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                             loading="lazy">
                        <div class="absolute inset-0 bg-black/30 flex items-center justify-center group-hover:bg-black/40 transition-colors">
                            <div class="bg-red-600 rounded-lg p-4 group-hover:scale-110 transition-transform">
                                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M8 5v14l11-7z"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                </a>
                <div class="p-4">
                    <h3 class="text-lg font-semibold text-purple-400">{{this.title}}</h3>
                    <p class="text-sm text-gray-400">{{this.description}}</p>
                </div>
            </div>
            {{/each}}
        </div>
        
        <div class="text-center mt-12">
            <a href="https://www.youtube.com/@{{site.social.youtube}}" 
               target="_blank" 
               rel="noopener noreferrer"
               class="inline-flex items-center gap-2 px-6 py-3 bg-red-600 hover:bg-red-700 rounded-full font-semibold transition-all hover:scale-105">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
                Watch More on YouTube
            </a>
        </div>
    </div>
</section>