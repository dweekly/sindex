<!-- BAND MEMBERS SECTION                         -->
<!-- Grid of band member profiles with microdata  -->
<!-- ============================================= -->
<section id="band-members" aria-labelledby="members-heading" class="py-20 px-6 bg-gradient-to-b from-purple-950/30 to-black">
    <div class="max-w-7xl mx-auto">
        <h2 class="bebas text-5xl md:text-6xl text-center mb-4 gradient-text" id="members-heading">The Band</h2>
        <p class="text-center text-gray-400 mb-12 max-w-3xl mx-auto">
            {{bandMembersCount}} talented musicians bringing you the finest funk and soul
        </p>
        
        <!-- Band Members Grid with Microdata -->
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {{#each members}}
            <div class="text-center group">
                
                
                <!-- Member Photo -->
                <div class="mb-3 relative inline-block">
                    <picture>
                        <source srcset="images/members/{{this.image}}.webp" type="image/webp">
                        <img src="images/members/{{this.image}}.jpg" 
                             alt="{{this.name}}" 
                             class="w-32 h-32 rounded-full mx-auto object-cover border-2 border-purple-500 transition-all group-hover:border-purple-400 group-hover:scale-105"
>
                    </picture>
                    
                    <!-- Founding Member Badge -->
                    {{#if this.founding}}
                    <div class="absolute top-0 right-0 w-8 h-8 bg-purple-600 rounded-full flex items-center justify-center text-white text-sm font-bold border-2 border-white shadow-md cursor-help group/badge">
                        <span class="pointer-events-none">F</span>
                        <div class="absolute top-full left-1/2 transform -translate-x-1/2 mt-1 hidden group-hover/badge:block bg-gray-900 text-white text-xs rounded px-2 py-1 whitespace-nowrap z-10 shadow-lg pointer-events-none">
                            Founding member ({{../band.foundingYear}}-present)
                        </div>
                    </div>
                    {{/if}}
                </div>
                
                <!-- Member Info -->
                <h3 class="font-bold text-white">{{this.name}}</h3>
                <p class="text-purple-400 text-sm">
                    <span class="inline-block mr-1">{{this.emoji}}</span>
                    <span>{{this.role}}</span>
                </p>
                
                
                <!-- Hover Card with More Info (only show if there's content) -->
                {{#if this.bio}}
                <div class="opacity-0 group-hover:opacity-100 transition-opacity absolute left-1/2 transform -translate-x-1/2 mt-2 p-4 bg-gray-900 rounded-lg shadow-xl z-20 w-80 max-w-md pointer-events-none">
                    <p class="text-sm text-gray-300 leading-relaxed">{{this.bio}}</p>
                    {{#if this.yearsWithBand}}
                    <p class="text-xs text-purple-400 mt-2">Since {{getStartYear this.yearsWithBand}}</p>
                    {{/if}}
                    {{#if this.instruments}}
                    <p class="text-xs text-gray-400 mt-1">
                        {{#each this.instruments}}{{this}}{{#unless @last}} â€¢ {{/unless}}{{/each}}
                    </p>
                    {{/if}}
                </div>
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</section>