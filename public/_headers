# Cache control headers for Cloudflare Pages

# Images - cache for 1 year (immutable content)
/images/*
  Cache-Control: public, max-age=31536000, immutable
  
# Favicon files - cache for 1 month
/favicon*
  Cache-Control: public, max-age=2592000
/apple-touch-icon.png
  Cache-Control: public, max-age=2592000

# Webfonts - cache for 1 year
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
/*.woff
  Cache-Control: public, max-age=31536000, immutable

# CSS files - cache for 1 week
/*.css
  Cache-Control: public, max-age=604800

# JavaScript files - cache for 1 week  
/*.js
  Cache-Control: public, max-age=604800

# JSON data - cache for 1 hour
/data/*.json
  Cache-Control: public, max-age=3600

# Manifest files - cache for 1 day
/manifest.json
  Cache-Control: public, max-age=86400

# HTML - short cache with revalidation
/index.html
  Cache-Control: public, max-age=300, must-revalidate
/404.html
  Cache-Control: public, max-age=3600

# Security and performance headers for all resources
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()